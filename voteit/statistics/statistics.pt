<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="api.main_template.macros['master']"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.statistics">
<body>
    <h2 i18n:translate="">Meeting statistics</h2>
    <div metal:fill-slot="content" class="content_wrapper">
        <table class="listing">
            <thead>
                <tr>
                    <th class="heading">UserID</th>
                    <tal:iterate repeat="item results">
                        <th class="heading">${item['display_name']}</th>
                    </tal:iterate>
                </tr>
            </thead>
            <tbody>
                <tal:iterate repeat="userid userids">
                <tr tal:attributes="class repeat.entry.odd and 'odd' or 'even'">
                    <td>${userid}</td>
                    <tal:iterate repeat="item results">
                        <td>${item['stats'].get(userid, '0')}</td>
                    </tal:iterate>
                </tr>
                </tal:iterate>
            </tbody>
        </table>
    </div>
</body>
</html>
